#---------------------------------------------
# mem_drc
#---------------------------------------------
proc mem_drc {libhandle} {
	# check processor type
	set proc_instance [hsi::get_sw_processor];
	set hw_processor [common::get_property HW_INSTANCE $proc_instance]

	set proc_type [common::get_property IP_NAME [hsi::get_cells -hier $hw_processor]];
    if { ( $proc_type != "psu_cortexr5" ) && ( $proc_type != "ps7_cortexa9" ) && ( $proc_type != "psu_cortexa53" ) && ( $proc_type != "psu_cortexa72" ) && ( $proc_type != "microblaze" ) && ( $proc_type != "psu_pmc" ) && ( $proc_type != "psu_psm" )} {
                error "ERROR: This library is supported only for CortexR5, CortexA9 and Microblaze processors.";
                return;
    }
}

#-------
# generate: called after OS and library files are copied into project dir
# 	we need to generate the following:
#		1. Makefile options
#		2. System Arch settings for xilmem to use
#-------
proc generate {lib_handle} {

	# Run cmake to generate make file
	set bdir "build_xilmem"
	if { [catch {file mkdir "${bdir}"} msg] } {
		error "Failed to create xilmem build directory."
	}
	set workdir [pwd]
	cd "${bdir}"
	set cmake_cmd "../src/run_cmake"
	set os_platform_type "$::tcl_platform(platform)"
	# use toolchain file generated by standalone tcl
	set cmake_opt "-DCMAKE_TOOLCHAIN_FILE=../../toolchain.cmake"
	append cmake_opt " -DCMAKE_INSTALL_PREFIX=/"
	append cmake_opt " -DCMAKE_VERBOSE_MAKEFILE=on"
	append cmake_opt " -DWITH_DEFAULT_LOGGER=off"

	if { [string match -nocase "windows*" "${os_platform_type}"] == 0 } {
		# Linux
		file attributes ${cmake_cmd} -permissions ugo+rx

		if { [catch {exec ${cmake_cmd} "../src/"  ${cmake_opt}} msg] } {
			error "Failed to generate cmake files.${msg}"
		} else {
			puts "${msg}"
		}

	} else {
		# Windows
		# Note: windows tcl exec does not do well when trying to provide ${cmake_opt}

		#       for now hardcoding the values directly on the command line.
		if { [catch {exec ${cmake_cmd} "../src/" -G "Unix Makefiles" -DCMAKE_TOOLCHAIN_FILE=../../toolchain -DCMAKE_INSTALL_PREFIX=/ -DCMAKE_VERBOSE_MAKEFILE=on -DWITH_DEFAULT_LOGGER=off -DWITH_DOC=off } msg] } {
			error "Failed to generate cmake files.${msg}"
		} else {
			puts "${msg}"
		}
	}

}
